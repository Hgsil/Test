<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    app:cardElevation="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/picture_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/picture_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picture_id"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="14sp"
            android:text="类型:福利"/>
        <ImageView
            android:id="@+id/picture_picture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@+id/picture_kind"/>
        <TextView
            android:id="@+id/picture_who"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picture_picture"
            android:layout_toLeftOf="@+id/picture_createAt"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/picture_createAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picture_picture"
            android:layout_marginTop="20dp"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/picture_publishedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picture_createAt"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>